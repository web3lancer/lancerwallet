# LancerWallet Appwrite Environment Variables Sample

# Appwrite endpoint (API URL)
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://your-appwrite-instance.com/v1

# Appwrite project ID
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your-project-id

# Appwrite database ID
NEXT_PUBLIC_APPWRITE_DATABASE_ID=lancerwallet_db

# Appwrite API key (server-side only, never expose to client)
APPWRITE_API_KEY=your-appwrite-api-key

# Collection IDs (for reference, use NEXT_PUBLIC_ prefix for client-side access)
NEXT_PUBLIC_APPWRITE_COLLECTION_USERS=users
NEXT_PUBLIC_APPWRITE_COLLECTION_WALLETS=wallets
NEXT_PUBLIC_APPWRITE_COLLECTION_TRANSACTIONS=transactions
NEXT_PUBLIC_APPWRITE_COLLECTION_TOKENS=tokens
NEXT_PUBLIC_APPWRITE_COLLECTION_NFTS=nfts
NEXT_PUBLIC_APPWRITE_COLLECTION_WEBAUTHN_CREDENTIALS=webauthn_credentials
NEXT_PUBLIC_APPWRITE_COLLECTION_DEFI_POSITIONS=defi_positions
NEXT_PUBLIC_APPWRITE_COLLECTION_APP_SETTINGS=app_settings
NEXT_PUBLIC_APPWRITE_COLLECTION_USER_SETTINGS=user_settings
NEXT_PUBLIC_APPWRITE_COLLECTION_PRICE_ALERTS=price_alerts
NEXT_PUBLIC_APPWRITE_COLLECTION_HARDWARE_WALLETS=hardware_wallets
NEXT_PUBLIC_APPWRITE_COLLECTION_PLUGIN_CONFIGURATIONS=plugin_configurations
NEXT_PUBLIC_APPWRITE_COLLECTION_BACKUPS=backups
NEXT_PUBLIC_APPWRITE_COLLECTION_NONCES=nonces
NEXT_PUBLIC_APPWRITE_COLLECTION_NETWORKS=networks
NEXT_PUBLIC_APPWRITE_COLLECTION_LANGUAGES=languages
NEXT_PUBLIC_APPWRITE_COLLECTION_CURRENCIES=currencies
NEXT_PUBLIC_APPWRITE_COLLECTION_TOKEN_STANDARDS=token_standards
NEXT_PUBLIC_APPWRITE_COLLECTION_ALERT_TYPES=alert_types

# Storage bucket IDs
NEXT_PUBLIC_APPWRITE_BUCKET_USER_AVATARS=user-avatars
NEXT_PUBLIC_APPWRITE_BUCKET_NFT_IMAGES=nft-images
NEXT_PUBLIC_APPWRITE_BUCKET_TRANSACTION_RECEIPTS=transaction-receipts
NEXT_PUBLIC_APPWRITE_BUCKET_BACKUP_DATA=backup-data
NEXT_PUBLIC_APPWRITE_BUCKET_APP_ASSETS=app-assets
NEXT_PUBLIC_APPWRITE_BUCKET_PLUGIN_ASSETS=plugin-assets
